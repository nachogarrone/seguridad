<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ucu.seguridad.controllers.MessagesController">
    <children>
        <TableView fx:id="tableMessages" prefHeight="408.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="authorColumn" prefWidth="100.0" text="Author"/>
                <TableColumn fx:id="messageColumn" prefWidth="300.0" text="Message"/>
                <TableColumn fx:id="decryptColumn" prefWidth="60.0" text="Decrypt"/>
            </columns>
        </TableView>
        <HBox spacing="10" alignment="bottom_left">
            <TextField fx:id="authorField" promptText="Author" prefWidth="100"/>
            <TextField fx:id="messageField" promptText="Message" prefWidth="300"/>
            <TextField fx:id="keyField" promptText="PIN" prefWidth="60"/>
            <Button text="Add" onAction="#addMessage"/>
        </HBox>
    </children>
</VBox>
